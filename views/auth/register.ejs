<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h1>

            <% include ../partials/messages %>

                <form action="/auth/register" method="POST">

                    <div class="form-group">
                        <label for="name" class="">Name</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Name" value="<%= typeof name != 'undefined' ? name : '' %>"
                        />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>"
                        />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>"
                        />
                    </div>

                    <div class="form-group">
                        <label for="passwordConf">Confirm Password</label>
                        <input type="password" id="passwordConf" name="passwordConf" class="form-control" placeholder="Confirm Password" value="<%= typeof passwordConf != 'undefined' ? passwordConf : '' %>"
                        />
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Register</button>

                </form>

                <p class="lead mt-4">Have An Account? <a href="/auth/login">Login</a></p>
        </div>
    </div>
</div>